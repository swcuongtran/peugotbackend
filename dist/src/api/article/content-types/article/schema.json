{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "Create your blog content"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "text",
            "maxLength": 80
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "cover": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images",
                "files",
                "videos"
            ]
        },
        "content": {
            "type": "dynamiczone",
            "components": [
                "shared.section-rich-text",
                "shared.section-quote",
                "shared.image-section"
            ]
        }
    }
}
